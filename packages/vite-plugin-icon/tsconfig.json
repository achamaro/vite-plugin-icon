{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "experimentalDecorators": false,
    "module": "ESNext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "*.d.ts"]
}
